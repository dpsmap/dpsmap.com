    <script>
        $(document).ready(function(){
            
          $("#translate1").hide();
          $("#ptran2").hide();
           
          $("#ptran1").click(function(){
            $("#translate1").show();
            $("#ptran2").show();
            $("#translate2").hide();
            $("#ptran1").hide();
            
          });
          
         
          $("#ptran2").click(function(){
            $("#translate1").hide();
            $("#ptran2").hide();
            $("#ptran1").show();
            $("#translate2").show();
          });
          
          });
        
